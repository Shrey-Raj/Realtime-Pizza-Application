<div class="orderList container ">

  <h4>Hello , 
  {{#if name}}
  <span class="text-uppercase text-danger fw-bold mb-5 heading">{{name}}</span>{{/if}}
 ! Have a look what you have eaten so far . . .</h4>


{{#if message}}
  <h4 id="success-alert" class="mt-4 p-3"><em>
    <i class="fas fa-check-circle"></i>
    Congratulations ! Order Placed Successfully ! {{query.orderId}}
    <span id="timer ml-4"><i class="fas fa-clock"></i></span>
  </em></h4>
{{else}}
  OOPS ! Some Error Occured !
{{/if}}



  <table class="table table-bordered table-striped">
    <thead class="thead-dark bg-success text-light">
      <tr>
        <th class="text-center">Order ID</th>
        <th class="text-center">Address</th>
        <th class="text-center">Time</th>
      </tr>
    </thead>
    <tbody>

      {{#unless orders}}
      <h2 class="fw-bold display-5 mb-3">Cart Empty</h2>
      {{/unless}}
 
    {{#each orders }}
      <tr>
          <td class="bg-custom text-center">
            <a href="/customers/orders/{{this._id}}" class="text-dark">
            {{this._id}}</a>
          </td>
          <td class="bg-custom text-center">{{this.address}}</td>
          <td class="bg-custom text-center timestamp">
           {{formatDate this.timestamp "YYYY-MM-DD HH:mm:ss"}}
          </td>
      </tr>
    {{/each}}
    </tbody>
  </table>
</div>


